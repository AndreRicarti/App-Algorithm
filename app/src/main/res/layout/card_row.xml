<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card"
    card_view:cardCornerRadius="5dp"
    android:backgroundTint="@color/cardview_light_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:layout_centerVertical="true"
            android:layout_width="2dp"
            android:layout_height="55dp"
            android:background="#a40404" />

        <TextView
            android:id="@+id/tv_algorithm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:fontFamily="sans-serif-medium"
            android:text="Bubble Sort"/>

        <TextView
            android:id="@+id/tv_tipo_algorithm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            android:text="Algoritmo de Ordenação"
            android:layout_below="@+id/tv_algorithm"/>

        <TextView
            android:id="@+id/tv_linguagem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="8dp"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            android:text="Linguagem C"
            android:layout_below="@+id/tv_tipo_algorithm"/>

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="right|center"
            android:src="@drawable/star_48_yellow"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>


    </RelativeLayout>
</android.support.v7.widget.CardView>